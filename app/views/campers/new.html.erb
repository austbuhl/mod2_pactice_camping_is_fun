<h1>Create a Camper</h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |error|%>
        <%= error %>
    <% end%>
<% end %>

<%= form_for @camper do |f| %>
    <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </p>
    
    <p>
        <%= f.label :age %>
        <%= f.number_field :age %>
    </p>

    <%= f.submit %>
<% end %>